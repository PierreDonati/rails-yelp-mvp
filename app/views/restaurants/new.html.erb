

<div class="container">
  <div class="row">
    <div class="col-md-offset-4 col-md-4 text-left">
      <h2>Add a restaurant</h2>
      <%= simple_form_for(@restaurant) do |f| %>
      <%= f.input :name %>
      <%= f.input :category, collection: Restaurant::CATEGORIES %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.submit class: "btn btn-primary" %>
      <% end %>
      <%= link_to 'Go back to restaurant list', restaurants_path, class: "btn btn-success" %>
    </div>
  </div>
</div>
