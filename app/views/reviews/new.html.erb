<div class="container">
  <div class="row">
    <div class="col-md-offset-4 col-md-4 text-left">
      <h2>Add a review</h2>

        <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.submit "add a review", class: "btn btn-primary" %>
        <% end %>

        <%= link_to "Go back to restaurant list", restaurants_path %>
    </div>
  </div>
</div>
